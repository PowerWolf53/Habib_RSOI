html
    head
        style
            include ../css/style.css
        title= title
    header
    body
        div(class='container')
            div(class='main-content')
                nav
                    h2= 'Навигация'
                    a(href='/')= 'Главная'
                    br
                    br
                    a(href='/add-country')= 'Новая страна'
                div(class='content-wrap')
                    h2= 'Редактирование страны'
                    form(action='/edit-country-post' method='post')
                        label= 'Уникальный номер'
                        br
                        input(type="text"  placeholder="Номер" id="_id" name="_id" value=country._id readonly)
                        br
                        label= 'Введите название'
                        br
                        input(type="text" placeholder="Название страны" id="countryName" name="countryName" value=country.countryName required)
                        br
                        label= 'Введите год создания'
                        br
                        input(type='number' placeholder="Год создания" id="countryYearCreating" name="countryYearCreating" value=country.countryYearCreating required)
                        br
                        label= 'Введите количество населения'
                        br
                        input(type="number" placeholder="Количество населения" id="countryCountPeople" name="countryCountPeople" value=country.countryCountPeople required)
                        br
                        label= 'Введите столицу'
                        br
                        input(type='text' placeholder="Столица" id="countryCapital" name="countryCapital" value=country.countryCapital required)
                        br
                        button= 'Изменить'
                    h3
                    form(action='/delete-country' method='post')
                        input(type="hidden" name="countryId" id="f" value=country._id)
                        button= 'удалить'
                aside
                    h2= 'Здесь может быть Ваша реклама'
    footer= '2019 © 1+1 media'
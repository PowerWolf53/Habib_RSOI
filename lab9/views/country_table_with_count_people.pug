html
    head
        style
            include ../css/style.css
        title= title
    header
    body
        div(class='container')
            div(class='main-content')
                nav
                    h2= 'Навигация'
                    a(href='/')= 'Главная'
                    br
                    br
                    a(href='/add-country')= 'Новая страна'
                    br
                    br
                    a(href='/countries-with-count-people')= 'Информация о странах по количеству людей'
                div(class='content-wrap')
                    h1(align='center')= 'Поиск по количеству людей'
                    form(action='/countries-with-count-people-get' method='get')
                        label= 'Введите количество людей'
                        br
                        input(type="number" placeholder="Количество населения" id="countryCountPeople" name="countryCountPeople" required)
                        br
                        button= 'Показать'
                        br

                    table(border="1" style="border-collapse: collapse" cellpadding="5")
                        tr
                            th= 'Название страны'
                            th= 'Год создания'
                            th= 'Население'
                            th= 'Столица'
                            th= 'Изменить'
                        - for (let index = 0; index < countries.length; index++)
                             tr
                                td= countries[index].countryName
                                td= countries[index].countryYearCreating
                                td= countries[index].countryCountPeople
                                td= countries[index].countryCapital
                                td
                                    a(href='/edit-country?_id=' + countries[index]._id)= 'Изменить'

                    br
                aside
                    h2= 'Здесь может быть Ваша реклама'
    footer= '2019 © 1+1 media'
